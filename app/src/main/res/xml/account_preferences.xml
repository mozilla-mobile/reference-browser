<androidx.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.Preference
        android:key="@string/pref_key_sync_manage_account"
        android:summary="@string/manage_account_summary"
        android:title="@string/manage_account" />

    <androidx.preference.Preference
            android:key="@string/pref_key_sync_now"
            android:title="@string/sync_now" />

    <androidx.preference.Preference
        android:key="@string/pref_key_sign_out"
        android:title="@string/sign_out" />

    <PreferenceCategory
        android:title="@string/sync_category">

        <CheckBoxPreference
            android:key="@string/pref_key_sync_history"
            android:defaultValue="true"
            android:enabled="false"
            android:title="@string/preferences_sync_history" />

        <CheckBoxPreference
            android:key="@string/pref_key_sync_tabs"
            android:defaultValue="true"
            android:enabled="false"
            android:title="@string/preferences_sync_tabs" />

        <CheckBoxPreference
            android:key="@string/pref_key_sync_passwords"
            android:defaultValue="true"
            android:enabled="false"
            android:title="@string/preferences_sync_passwords" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
